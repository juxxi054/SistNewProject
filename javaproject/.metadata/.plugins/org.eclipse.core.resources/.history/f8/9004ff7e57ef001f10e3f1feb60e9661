package day2020;

public class ForSum_13 {

	public static void main(String[] args) {
		// 1~10까지의 반복문 합구하기_for
		
		int sum=0;
		for(int i=1;i<=10;i++)
		{
			sum+=i; //sum=sum+i ( 누적)
		}
 
		System.out.println("1~10까지의 합은"+sum+"입니다");
		
		//1~10 까지의 반복문으로 합구하기 _while
		
		int tot=0;
		int i=1;
		
		while(i<=10) {
			
			// 합계변수에 i를 누적시킨다
			tot=tot+i; //tot+=i;
			i++;

			System.out.println("1~10까지의 합은"+sum+"입니다");
			
			
			//1~20까지의 합을 구하되 2씩 증가한다
            
			int total=0;
			for (int a=1;a<=20;a+=2)
			{
				total+=a;
			}
			System.out.println("1~20까지 2씩증가한 수의 합계는 "+total);
			
			//Q.1 2 4 5 7 8 10
			
			for (int b=0;b<=10;b++)
			{
				if(b%3==0)
				continue;
				System.out.print(b+" ");	
			}
			System.out.println();
			
			tot=0;
			for (int q=20;q>=1;q*=2)
			{
				tot+=q;
			}
			System.out.println(tot+" ");
			
		}
	}

}
