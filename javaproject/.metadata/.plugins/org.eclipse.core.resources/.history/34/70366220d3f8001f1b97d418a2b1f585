package day0304;

/* 보너스는 개발부만 100만 다른부서는 50만 
*사원명?
 * 이준영
 * 부서?
 * 개발부
 * 기본급?
 * 2000000
 * ================================
 * 사원명  부서   기본급    보너스    총급여
 * 이준영  개발부 2000000 1000000 3000000
 */

class Sawon{
	 
	private String sawonName,buseo;
	private int gibonPay;
	
	//명시적생성자(3가지 인자 초기화하는 값 넘기기)
	public Sawon(String sawonName, String buseo, int gibonPay) {
        this.sawonName = sawonName;
        this.buseo = buseo;
        this.gibonPay = gibonPay;
    }
	
	//메서드_getBonus
	
	public int getBonus()
	{
		if(buseo.equals("개발부"))
		{
			return 1000000;
		}
			else {
				return 500000;
			}
		}
	 public void printSalary() {
	int bonus=getBonus();
	int totalPay=gibonPay+bonus;
	 System.out.println("사원명: " + sawonName);
     System.out.println("부서: " + buseo);
     System.out.println("기본급: " + gibonPay);
     System.out.println("보너스: " + bonus);
     System.out.println("총급여: " + totalPay);
 }
}
	 
	 
