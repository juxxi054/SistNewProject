package day2021;

import java.util.Scanner;

public class Quiz0221 {
	public static void main(String[] args) {
		// 5번의 숫자를 양수 음수 상관없이 입력한후 각각 양수의 갯수와 음수의 갯수 구하기 (For문 이용)
		/* 1:10
		 * 2:-2
		 * 3:20
		 * 4:-100
		 * 5:99
		 * ========
		 * 양수갯수:3개
		 * 음수갯수:3개
		 */
		Scanner sc=new Scanner(System.in);
		int a=0,b=0;
		int num;
		
		System.out.println("숫자를 입력하시오");
		for(int i=1;i<=5;i++)
		{
	    num=sc.nextInt();
		System.out.println(i+":"+num);
		
		
		if(num>0)
		  a+=1;
		else if (num<0)
		  b+=1;
		}
		System.out.println("양수갯수"+a);
		System.out.println("음수갯수"+b);
			}
	
	   
		
			
		
		 
	public static void quiz2() {
		/* while true문 이용
		 * 나이를 반복해서 입력 받는다 0이되면 빠져나와 출력
		 * 나이가 50이상이면  a변수 증가
		 * 나이가 30이상이면  b변수 증가
		 *  나머지는 c변수 증가
		 *  ==============
		 *  나이입력:53
		 *  나이입력:47
		 *  나이입력:66
		 *  나이입력:35
		 *  나이입력:11
		 *  나이입력:12
		 *  ==============
		 *  50세 이상:2명
		 *  30세 이상:3명
		 *  그외: 2명
		 */
		Scanner sc=new Scanner(System.in);
		int a=0,b=0,c=0;
		
		
		while (true) {
			 System.out.print("나이입력: ");
			 int age = sc.nextInt();
		if (age==0);
		  break;
		  
		}
		if (age>= 50) {
            a++;  
        } else if (age>= 30) {
            b++;  
        } else {
            c++;  
	}
	

	
	
}


