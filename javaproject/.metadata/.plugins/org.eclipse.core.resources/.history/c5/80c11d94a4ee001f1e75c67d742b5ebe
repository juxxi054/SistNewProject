package day0219;

import java.util.Scanner;

public class a {

	public static void main(String[] args) {
		
		Scanner sc=new Scanner(System.in);
		String name;
		int amount,price,tot,dc;
		
		
		System.out.println("입고된 상품명은?");
		name=sc.nextLine();
		System.out.println("수량은?");
		amount=sc.nextInt();
		System.out.println("단가?");
		price=sc.nextInt();
		System.out.println("총금액?");
		tot=amount*price;
		
		if(amount>=5)
		  dc=tot/10;
        
		System.out.println("이름"+name);
		System.out.println("수량"+amount+"개");
		System.out.println("가격"+price+"원");
		System.out.println("총금액"+tot+"원");
		System.out.println("dc된 최종금액"+(tot-dc)+"원");
		
	}

}
