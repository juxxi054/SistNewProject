package day2021;

import java.util.Scanner;

public class a1{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int num = 0, a = 0, b = 0, c = 0;
        
        while (true) {
            System.out.print("나이입력: ");
            num = sc.nextInt();
            
            // 나이가 0이면 종료
            if (num == 0) {
                System.out.println("종료");
                break;  // 0이 입력되면 반복문 종료
            }

            // 나이에 따른 카운트 증가
            if (num >= 50) {
                a++;  // 50세 이상 카운트
            } else if (num >= 30) {
                b++;  // 30세 이상 카운트
            } else {
                c++;  // 그 외 나이대 카운트
            }
        }