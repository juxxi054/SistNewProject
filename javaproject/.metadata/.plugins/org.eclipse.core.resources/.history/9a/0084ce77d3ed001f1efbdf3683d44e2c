package day0218;

import java.util.Scanner;

public class QuizeLast_13 {

	public static void main(String[] args) {
		
		/*
		 * 키보를 입력하고 출력을 다음과 같이 해보세요
		 * 변수는 마음대로 어울리게 줄것!!!
		 * 
		 * 당신의 이름은?
		 * 김사랑
		 * 당신의 출생년도는?
		 * 1997
		 * 당신의 직업은?
		 * 연예인
		 * 
		 * ============
		 * 김사랑님은 1997년생이며 28세입니다. 직업은 연예인입니다*/
		
		Scanner sc=new Scanner(System.in);
		
		//변수선언
		 String name,job;
		 int age,year;
		 
		 // 입력할멘트
		 
		 System.out.print("이름을 입력해보세요===>");
		 name=sc.next();
		System.out.print("출생년도를 입력해보세요===>");
		  year=sc.next();
		  System.out.println("직업을 입력해보세요===>");
		  job=sc.next();
		  
		  //출력
		  System.out.println(name+"은");
		  System.out.println(year+"이며");
		  System.out.println(job+"입니다");
		  
		  
	}

}
