package day0224;

public class ForReviewStar_01 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		System.out.println("**다중 For문으로 star (*)출력하기**");
		
		//5행5열로  star 출력
		for(int i=1;i<=5;i++)  //행갯수
		{
			for(int j=1;j<=5;j++)
			{
				System.out.println("*");
			}
			System.out.println();
		}
		//5행5열 star  (1행:1열 2행2열까지...)
		for(int i=1;i<=5;i++)  //행갯수
		{
			for(int j=1;j<=i;j++)
			{
				System.out.println("*");
			}
			System.out.println();
		}
	}
	
}
